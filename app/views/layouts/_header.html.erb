<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <% if Setting.exists? %>
        <%= link_to Setting.first.logostring, root_path, id: "logo" %>
      <% else %>
        <%= link_to "Empty", root_path, id: "logo" %>   
      <% end %>
      
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <%= render "layouts/forum"%>
            <li><%= link_to "Users", users_path %></li>
            <li><%= render "layouts/links"%></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "User Edit", edit_user_path(current_user) %></li>
                <li><%= link_to "Homepage Setting", settings_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>    
        </ul>
      </nav>
    </div>
  </div>
</header>