<% provide(:title, 'Home') %>
<div class="center hero-unit">
  <% if Setting.exists? %>
    <%= raw RedCloth.new(Setting.first.mainimageurl).to_html %>
  <% else %>
  
  <% end %>
  <br/>
  <br/>
  <h1>
    <% if Setting.exists? %>
      <%= Setting.first.logostring %>
    <% else %>
      Empty
    <% end %>
  </h1>
  <blockquote>
	  <h3>
      <% if Setting.exists? %>
        <%= Setting.first.maindescription %>
      <% else %>
        <% if signed_in? %>
        <%= link_to "Setting Your pages.", settings_path %>
        <% else %>
          Sign up and Sign in -> Make your pages.
        <% end %> 
      <% end %>
	  </h3>
	</blockquote>
  <br/>
  <% if signed_in? %>
    <%= current_user.name  %> Welcome.
  <% else %>
    <%= link_to "가입하기", signup_path, class: "btn btn-smmll btn-primary"%>
  <% end %>
</div>


<div class="span9">
  <table class="<%= cycle("odd", "even") %>">
  <% if Forum.exists? %>
    <% Forum.first.topics.each do |topic| %>
      <tr>
      <% if topic.image.exists? %>
        <td><%= image_tag topic.image, class:"thumbnail span3 offset2" %></td>
        <td><h4 class= "span6"><%= topic.description%></h4></td>
      <% end %>
      </tr>
      <tr>
        <td><h3><%= topic.title %></h3></td>
      </tr>
    <% end %>
  <% else %>
  <% end %>
  </table>
</div>
<div class="span3">
</div>