<% provide(:title,'Forum')%>
<h1> Forum list</h1>
<% @forums.each do |forum| %>
  <div class ="forumlist">
    <span class="title"><b><%= link_to forum.title, forum_path(forum) %></b></span>
    <br/>
    <span class="description"><%= forum.description%></span><br/>
  </div>
<% end %>
  

<table style="display:none">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @forums.each do |forum| %>
  <tr>
    <td><%= forum.title %></td>
    <td><%= forum.description %></td>
    <td><%= link_to 'Show', forum %></td>
    <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
    <td><%= link_to 'Destroy', forum, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if admin? %>
<%= link_to 'New Forum', new_forum_path %>
<% end %>
